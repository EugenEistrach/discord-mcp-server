{
	"name": "discord-mcp-server",
	"version": "0.1.0",
	"description": "A Model Context Protocol server for Discord notifications and user input",
	"main": "dist/index.js",
	"type": "module",
	"scripts": {
		"build": "tsc",
		"dev": "tsx src/index.ts",
		"start": "node dist/index.js",
		"test": "tsx src/test.ts",
		"typecheck": "tsc --noEmit",
		"lint": "biome check . --write",
		"ci": "bun run typecheck && bun run lint && bun run build",
		"prepublishOnly": "bun run ci"
	},
	"keywords": [
		"mcp",
		"model-context-protocol",
		"discord",
		"notifications",
		"ai",
		"claude",
		"bot"
	],
	"author": "Eugene Istrach",
	"license": "MIT",
	"dependencies": {
		"@modelcontextprotocol/sdk": "^1.13.0",
		"discord.js": "^14.20.0",
		"dotenv": "^16.5.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.0.3",
		"@types/node": "^24.0.3",
		"tsx": "^4.20.3",
		"typescript": "^5.8.3"
	},
	"bin": {
		"discord-mcp-server": "./dist/index.js"
	},
	"files": ["dist", "README.md", "LICENSE"],
	"engines": {
		"node": ">=18.0.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/EugenEistrach/discord-mcp-server.git"
	}
}
