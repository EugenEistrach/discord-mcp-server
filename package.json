{
  "name": "discord-mcp-server",
  "version": "0.1.0",
  "description": "A Model Context Protocol server for Discord notifications and user input",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "test": "tsx src/test.ts",
    "test:notify": "tsx src/test.ts notify",
    "test:input": "tsx src/test.ts input", 
    "test:yesno": "tsx src/test.ts yesno",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "discord",
    "notifications",
    "ai",
    "claude",
    "bot"
